<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>StudentList App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">StudentList App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addStudent">Add new student</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Student Details</h2></div>
        <br>
        <% if (student) { <!-- Check if product data exists -->
            const date = new Date(student.dob); // Convert to date object 
            const day = String(date.getDate()).padStart(2, '0');
            const month = date.toLocaleString('default', { month: 'short' });
            const year = date.getFullYear();
            const formattedDate = `${day} ${month} ${year}`; // Combine and make new variable
        %>

          <div>
              <p><b>Student Name:</b><br> <%= student.name %></p>
              <p><b>Student Image:</b><br> <img src = "/images/<%= student.image %>" width="20%"></p>
              <p><b>DOB:</b><br> <%= formattedDate %></p>
              <p><b>Contact:</b><br> <%= student.contact %></p> 
          </div>
          
        <% } else { %>
            <p>No student found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>